"按r编译运行
map r :call CompileRunGcc()<CR>
func! CompileRunGcc()
  exec "w"
  if &filetype == 'c'
    exec "!g++ % -o %<"
    exec "!time ./%<"
  elseif &filetype == 'cpp'
    exec "!g++ -ltensorflow % -o %<"
    exec "!time ./%<"
  elseif &filetype == 'java'
    exec "!javac %"
    exec "!time java %<"
  elseif &filetype == 'sh'
    :!time sh %
  elseif &filetype == 'python'
    silent! exec "!clear"
    exec "!time python %"
  elseif &filetype == 'html'
    exec "!firefox % &"
  elseif &filetype == 'markdown'
    :CocCommand markdown-preview-enhanced.openPreview
"    exec "MarkdownPreview"
  elseif &filetype == 'vimwiki'
    :CocCommand markdown-preview-enhanced.openPreview
"    exec "MarkdownPreview"
  elseif &filetype == 'go'
     exec "!go run % "
  elseif &filetype == 'cs'
    exec "!time dotnet run  % "
  endif
endfunc